{
  "compilerOptions": {
      "jsx": "react",
      "target": "es6",
      "module": "commonjs",
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "baseUrl": "./",  // all paths are relative to the baseUrl
      "paths": {
          "~/*" : ["src/client/*"]   // resolve any `~/foo/bar` to `<baseUrl>/foo/bar`
      }
  },
  "exclude": [
      "node_modules",
      "public"
  ]
}